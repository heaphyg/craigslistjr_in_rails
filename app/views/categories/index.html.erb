
<h2>Welcome to Craigslist Categories</h2>

<p>Click <%= link_to "here", new_category_path %> to create a new category.</p>


<hr>
<ul>
<% @categories.each do |category| %>
  <li><%= link_to category.name, category_path(category) %> -
    <%= link_to "Edit", edit_category_path(category) %>
    /
    <%= link_to "Delete", category, method: :delete, data: { confirm: "Are you sure?" } %></li>
<% end %>
</ul>
